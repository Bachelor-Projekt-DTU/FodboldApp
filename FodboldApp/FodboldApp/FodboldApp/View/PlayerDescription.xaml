<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FodboldApp.Pages.PlayerDescription"
             ControlTemplate="{StaticResource MainPageTemplate}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Name}"
                   TextColor="{StaticResource textColor}"
                   HorizontalOptions="CenterAndExpand" BackgroundColor="#f0f0f0"/>
            <StackLayout Orientation="Horizontal">
                <Image Source="http://www.bkfrem.dk/images/spillere/07_andreas_lundberg.jpg" VerticalOptions="FillAndExpand"/>
                <Grid x:Name="statGrid"/>
            </StackLayout>
            <Grid x:Name="descriptionGrid"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>