<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FodboldApp.View.Login">
    <ContentPage.Content>
        <StackLayout x:Name="MainStackLayout" Orientation="Horizontal" HorizontalOptions="Center">
            <Image Source="facebook_icon.png" HorizontalOptions="Start" VerticalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding FacebookLoginCommand}"/>
                </Image.GestureRecognizers>
            </Image>
            <Image Source="google_plus_icon" HorizontalOptions="End" VerticalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GooglePlusLoginCommand}"/>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>